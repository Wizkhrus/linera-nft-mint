# Linera Testnet Configuration
# Copy this file to .env.local and fill in with your values

# ===== Linera SDK Configuration =====
LINERA_RPC_URL=https://rpc.testnet-babbage.linera.net
LINERA_APPLICATION_ID=YOUR_APPLICATION_ID_HERE
LINERA_CHAIN_ID=YOUR_CHAIN_ID_HERE

# ===== Wallet Configuration =====
# Your Linera wallet private key (for backend signing - NEVER commit this!)
LINERA_WALLET_KEY=YOUR_PRIVATE_KEY_HERE

# Wallet public address
LINERA_WALLET_ADDRESS=YOUR_PUBLIC_ADDRESS_HERE

# ===== NFT Contract Configuration =====
# Default NFT metadata
NFT_CONTRACT_OWNER=YOUR_OWNER_ADDRESS
NFT_DEFAULT_NAME=Red & White T-Rex
NFT_DEFAULT_DESCRIPTION=A retro pixel art T-Rex in vibrant red and white

# ===== Blockchain Explorer =====
BLOCKCHAIN_EXPLORER_URL=https://explorer.testnet-babbage.linera.net
BLOCKCHAIN_TX_EXPLORER_BASE=https://explorer.testnet-babbage.linera.net/transaction

# ===== API Configuration =====
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_MINT_ENDPOINT=/api/mint

# ===== Development =====
NODE_ENV=development

# ===== Optional: Faucet Configuration =====
# For testnet development
FAUCET_URL=https://faucet.testnet-babbage.linera.net
FAUCET_AMOUNT=10

# ===== Deployment Configuration =====
# For Vercel deployment
VERCEL_ENV=production
VERCEL_URL=https://linera-nft-mint.vercel.app
